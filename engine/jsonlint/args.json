{
    "$schema": "https://repometric.github.io/linterhub/schema/args.json",
    "name": "jsonlint",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/arguments"
        }
    ],
    "definitions": {
        "arguments": {
            "type": "object",
            "properties": {
                "--sort-keys": {
                    "id": "args:--sort-keys",
                    "type": "null",
                    "description": "sort object keys"
                },
                "--in-place": {
                    "id": "args:--in-place",
                    "type": "null",
                    "description": "overwrite the file"
                },
                "--indent": {
                    "id": "args:--indent",
                    "type": "array",
                    "description": "character(s) to use for indentation"
                },
                "--compact": {
                    "id": "args:--compact",
                    "type": "null",
                    "description": "compact error display"
                },
                "--validate": {
                    "id": "args:--validate",
                    "type": "null",
                    "description": "a JSON schema to use for validation"
                },
                "--environment": {
                    "id": "args:--environment",
                    "type": "null",
                    "description": "which specification of JSON Schema the validation file uses  [json-schema-draft-03]"
                },
                "--quiet": {
                    "id": "args:--quiet",
                    "type": "null",
                    "description": "do not print the parsed json to STDOUT  [false]"
                },
                "--pretty-print": {
                    "id": "args:--pretty-print",
                    "type": "null",
                    "description": "force pretty printing even if invalid"
                },
                "-h": {
                    "type": "null",
                    "description": "Show help"
                },
                "--version": {
                    "id": "linterhub:version",
                    "type": "string",
                    "description": "Show version"
                },
                "": {
                    "id": "linterhub:path",
                    "type": "string",
                    "description": "Path for analysis"
                }
            }
        },
        "section": {
            "type": "object",
            "description": "The engine configuration section",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The engine name",
                    "enum": [
                        "jsonlint"
                    ]
                },
                "arguments": {
                    "type": "object",
                    "description": "The engine configuration",
                    "$ref": "#/definitions/arguments"
                }
            }
        }
    }
}
