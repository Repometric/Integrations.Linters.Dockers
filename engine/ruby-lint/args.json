        },
        "--analysis":{
          "id":"args:--analysis",
          "type":"string",
          "description":"The analysis classes to use"
        },
        "--benchmark":{
          "id":"--benchmark",
          "type":"null",
          "description":"Enables benchmarking mode"
        },
        "--version": {
          "id:": "linterhub:version",
          "type": "null",
